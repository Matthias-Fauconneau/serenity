source = Source
capsules = Capsules
shift = ShiftRight source
smoothx = Smooth shift
smoothxy = Smooth smoothx
smooth = Smooth smoothxy shift=0
pore rock = Threshold smooth
colorize = Colorize pore source
distancex positionxx = DistanceX pore
distancey positionyx positionyy = DistanceY distancex positionxx
distance positionx positiony positionz = DistanceZ distancey positionyx positionyy
skeleton = Skeleton positionx positiony positionz
#skeleton_histogram = SqrtHistogram skeleton
skeleton_unconnected = Tile skeleton
skeleton_connected = FloodFill skeleton_unconnected
bins_unconnected = Bin skeleton_unconnected
bins_connected = Bin skeleton_connected
unconnected = Rasterize bins_unconnected
connected = Rasterize bins_connected

# Computes histogram of maximal ball radii (i.e. pore size distribution)
histogram_unconnected = SqrtHistogram unconnected
histogram_connected = SqrtHistogram connected

